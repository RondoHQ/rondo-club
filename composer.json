{
    "name": "rondohq/rondo-club",
    "description": "Rondo Club management theme with CardDAV support",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0",
        "google/apiclient": "^2.15",
        "sabre/dav": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "Rondo\\": "includes/"
        },
        "classmap": [
            "includes/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "lucatume/wp-browser": "^4.5",
        "wp-coding-standards/wpcs": "^3.3"
    },
    "scripts": {
        "test": "vendor/bin/codecept run wpunit",
        "test:coverage": "vendor/bin/codecept run wpunit --coverage --coverage-html",
        "lint": "vendor/bin/phpcs",
        "lint:fix": "vendor/bin/phpcbf"
    }
}
