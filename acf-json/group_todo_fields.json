{
    "key": "group_todo_fields",
    "title": "Todo Fields",
    "fields": [
        {
            "key": "field_todo_related_person",
            "label": "Related Person",
            "name": "related_person",
            "type": "post_object",
            "instructions": "Select the person this todo is related to",
            "required": 1,
            "post_type": ["person"],
            "multiple": 0,
            "return_format": "id",
            "allow_null": 0
        },
        {
            "key": "field_todo_is_completed",
            "label": "Completed",
            "name": "is_completed",
            "type": "true_false",
            "instructions": "",
            "required": 0,
            "default_value": 0,
            "ui": 1,
            "ui_on_text": "Yes",
            "ui_off_text": "No"
        },
        {
            "key": "field_todo_due_date",
            "label": "Due Date",
            "name": "due_date",
            "type": "date_picker",
            "instructions": "Optional due date for this todo",
            "required": 0,
            "display_format": "F j, Y",
            "return_format": "Y-m-d"
        },
        {
            "key": "field_todo_visibility",
            "label": "Visibility",
            "name": "_visibility",
            "type": "select",
            "instructions": "Control who can see this todo",
            "required": 1,
            "choices": {
                "private": "Private (only you)",
                "workspace": "Workspace"
            },
            "default_value": "private",
            "return_format": "value",
            "allow_null": 0,
            "multiple": 0,
            "ui": 0,
            "ajax": 0
        },
        {
            "key": "field_todo_assigned_workspaces",
            "label": "Workspaces",
            "name": "_assigned_workspaces",
            "type": "taxonomy",
            "instructions": "Select which workspaces can access this todo",
            "required": 0,
            "conditional_logic": [
                [
                    {
                        "field": "field_todo_visibility",
                        "operator": "==",
                        "value": "workspace"
                    }
                ]
            ],
            "taxonomy": "workspace_access",
            "add_term": 0,
            "save_terms": 1,
            "load_terms": 1,
            "return_format": "id",
            "field_type": "checkbox",
            "allow_null": 1,
            "multiple": 0
        }
    ],
    "location": [
        [
            {
                "param": "post_type",
                "operator": "==",
                "value": "prm_todo"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "hide_on_screen": [
        "excerpt",
        "discussion",
        "comments",
        "slug"
    ],
    "active": true,
    "show_in_rest": 1
}
