            "choices": {
                "low": "Low",
                "medium": "Medium",
                "high": "High",
                "critical": "Critical"
            },
            "default_value": "medium",
            "return_format": "value",
            "allow_null": 0,
            "multiple": 0,
            "ui": 0,
            "ajax": 0
