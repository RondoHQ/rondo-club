            "name": "browser_info",
            "type": "text",
            "instructions": "Browser and OS information (auto-captured)",
            "required": 0
        },
        {
            "key": "field_feedback_app_version",
            "label": "App Version",
            "name": "app_version",
            "type": "text",
            "instructions": "Caelis version at time of submission",
            "required": 0
        },
        {
            "key": "field_feedback_url_context",
            "label": "URL Context",
            "name": "url_context",
            "type": "text",
            "instructions": "Page URL where feedback was submitted",
            "required": 0
        },
        {
            "key": "field_feedback_steps_to_reproduce",
            "label": "Steps to Reproduce",
            "name": "steps_to_reproduce",
            "type": "textarea",
            "instructions": "Describe the steps to reproduce this issue",
            "required": 0,
            "rows": 4,
            "conditional_logic": [
                [
                    {
                        "field": "field_feedback_type",
                        "operator": "==",
                        "value": "bug"
                    }
                ]
            ]
        },
        {
            "key": "field_feedback_expected_behavior",
            "label": "Expected Behavior",
            "name": "expected_behavior",
            "type": "textarea",
            "instructions": "What did you expect to happen?",
            "required": 0,
            "rows": 4,
            "conditional_logic": [
                [
                    {
                        "field": "field_feedback_type",
                        "operator": "==",
                        "value": "bug"
                    }
                ]
            ]
        },
        {
            "key": "field_feedback_actual_behavior",
            "label": "Actual Behavior",
            "name": "actual_behavior",
            "type": "textarea",
            "instructions": "What actually happened?",
            "required": 0,
            "rows": 4,
            "conditional_logic": [
                [
                    {
                        "field": "field_feedback_type",
                        "operator": "==",
                        "value": "bug"
                    }
                ]
            ]
        },
        {
            "key": "field_feedback_use_case",
            "label": "Use Case",
            "name": "use_case",
            "type": "textarea",
            "instructions": "Describe how you would use this feature",
            "required": 0,
            "rows": 4,
            "conditional_logic": [
                [
                    {
                        "field": "field_feedback_type",
                        "operator": "==",
                        "value": "feature_request"
                    }
                ]
            ]
        },
        {
            "key": "field_feedback_attachments",
            "label": "Attachments",
            "name": "attachments",
            "type": "gallery",
            "instructions": "Screenshots or other files related to this feedback",
            "required": 0,
            "return_format": "array",
            "preview_size": "medium",
            "library": "all",
            "min": 0,
            "max": 50
        }
    ],
    "location": [
        [
            {
                "param": "post_type",
                "operator": "==",
                "value": "caelis_feedback"
            }
        ]
