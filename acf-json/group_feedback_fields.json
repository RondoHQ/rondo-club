            "choices": {
                "new": "New",
                "in_progress": "In Progress",
                "resolved": "Resolved",
                "declined": "Declined"
            },
            "default_value": "new",
            "return_format": "value",
            "allow_null": 0,
            "multiple": 0,
            "ui": 0,
            "ajax": 0
        },
        {
            "key": "field_feedback_priority",
            "label": "Priority",
            "name": "priority",
            "type": "select",
            "instructions": "",
